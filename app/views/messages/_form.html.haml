= form_for @message do |f|
  - if @message.errors.any?
    #error_explanation
      %h2= "#{pluralize(@message.errors.count, "error")} prohibited this message from being saved:"
      %ul
        - @message.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :sender
    = f.text_field :sender
  .field
    = f.label :email
    = f.text_field :email
  .field
    = f.label :ip
    = f.text_field :ip
  .field
    = f.label :message
    = f.text_area :message
  .actions
    = f.submit 'Save'
