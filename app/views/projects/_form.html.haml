= form_for @project do |f|
  - if @project.errors.any?
    #error_explanation
      %h2= "#{pluralize(@project.errors.count, "error")} prohibited this project from being saved:"
      %ul
        - @project.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :start_time
    = f.datetime_select :start_time
  .field
    = f.label :end_time
    = f.datetime_select :end_time
  .field
    = f.label :description
    = f.text_area :description
  .field
    = f.label :education
    = f.select :education_id, Education.all.map {|education| [education.school, education.id]} + [['No education', nil]]
  .field
    = f.label :job
    = f.select :job_id, Job.all.map {|job| [job.company, job.id]} + [['No job', nil]]
  .actions
    = f.submit 'Save'
