%p#notice= notice

%p
  %b Name:
  = @project.name
%p
  %b Start time:
  = @project.start_time
%p
  %b End time:
  = @project.end_time
%p
  %b Description:
  = allow_line_break @project.description
%p
  %b Education:
  = link_to @project.education.school, @project.education if @project.education != nil
%p
  %b Job:
  = link_to @project.job.company, @project.job if @project.job != nil

= link_to 'Edit', edit_project_path(@project)
\|
= link_to 'Back', projects_path
= javascript_include_tag 'projects', 'data-turbolinks-track': 'reload'
= stylesheet_link_tag 'scaffolds', media: 'all'
= stylesheet_link_tag 'projects', media: 'all'
